<div row>
  <div column="4 +4">
    <h2>Login</h2>
    <%= form_for @user_session, url: user_session_path do |f| %>
      <div class="form-field">
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>
      <div class="form-field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div class="form-field">
        <%= f.check_box :remember_me  %>
        <%= f.label :remember_me %>
      </div>
      <%= f.submit 'Login' %>
    <% end %>
  </div>
</div>
